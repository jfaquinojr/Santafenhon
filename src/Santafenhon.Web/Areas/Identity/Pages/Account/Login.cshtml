@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-7 col-lg-6 col-xl-5 m-auto">
        <div class="text-center mt-5">
            <h1 class="text-center">Welcome</h1>

        </div>

        <section>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="col-form-label col-form-label-lg"></label>
                    <input asp-for="Input.Email" class="form-control form-control-lg" autofocus />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="col-form-label col-form-label-lg"></label>
                    <input asp-for="Input.Password" class="form-control form-control-lg" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group mt-5">
                    <button type="submit" class="btn btn-primary btn-block btn-lg">Log in</button>
                </div>
                <!--<div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>-->
                @*<p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>*@
                <!--</div>-->
            </form>
        </section>

        <section>
            <hr />
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                <div>
                    <button type="submit" class="btn btn-outline-primary btn-block btn-lg" name="provider" value="Facebook" title="Log in using your Facebook account">
                        <i class="fab fa-facebook-square mr-2"></i>
                        Facebook
                    </button>
                </div>
            </form>
        </section>
    </div>
</div>


@section Head {
    @*<link href="~/lib/fontawesome/css/brands.css" rel="stylesheet" />*@
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
