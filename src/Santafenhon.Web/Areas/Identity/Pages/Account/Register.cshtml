@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="row">
    <div class="col-md-7 col-lg-6 col-xl-5 m-auto">
        <section>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h1 class="mt-5 mb-5 text-center">Create a new Account</h1>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="col-form-label col-form-label-lg"></label>
                    <input asp-for="Input.Email" class="form-control form-control-lg" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="col-form-label col-form-label-lg"></label>
                    <input asp-for="Input.Password" class="form-control form-control-lg" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="col-form-label col-form-label-lg"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block btn-lg mt-5">Create Account</button>
            </form>
        </section>

        <section>
            <hr />
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                <div>
                    <button type="submit" class="btn btn-outline-primary btn-block btn-lg" name="provider" value="Facebook" title="Log in using your Facebook account">
                        <i class="fab fa-facebook-square mr-2"></i>
                        Facebook
                    </button>
                </div>
            </form>
        </section>
    </div>


</div>


@section Head {
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
